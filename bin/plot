#!/usr/local/bin/zsh -u

file=$(readlink -f $1)
with=$2
output=$3

cd `dirname $0`

case "$output" in
    x)
        output="gen_x_plot"
        ;;
    pdf)
        output="gen_eps_plot"
        ;;
    *)
        echo "<|1|> Didn't match anything"
esac

cat <(./$output $file $with) _plot/plot.pl <(_plot/gen $file $with) | gnuplot -p
